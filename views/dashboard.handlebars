<h1 class="display-4">Make a Post!</h1>
<form>
    <div class="form-group">
        <label for="title">Title</label>
        <input id="title" class="form-control" type="text" name="title" placeholder="Title">
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        <input id="body" class="form-control" type="text" name="body" placeholder="Body">
    </div>
    <button id="submitBtn" class="btn btn-primary">Post</button>
</form>

{{#each blogposts as |blogpost|}}
    <a href="blogpost/{{blogpost.id}}" class="text-decoration-none">
        <h2 class="mb-3">{{blogpost.title}}</h2>
    </a>
    <p>{{blogpost.createdAt}}</p>
    <button id="deleteBtn" class="btn btn-danger deleteBtn" data-id="{{blogpost.id}}">Delete</button>
    <button id = "editBtn" class="btn btn-warning editBtn" data-id="{{blogpost.id}}">Edit</button>
{{/each}}

<script src="/js/dashboard.js"></script>