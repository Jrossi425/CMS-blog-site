<h1 class="display-4">Edit a Post!</h1>
<form>
    <input type="hidden" name="post-id" value="{{blogpost.id}}">
    <div class="form-group">
        <label for="title">Title</label>
        <input id="title" class="form-control" type="text" name="title" placeholder="Title">
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        <input id="body" class="form-control" type="text" name="body" placeholder="Body">
    </div>
    <button id="submitBtn" class="btn btn-primary">Update</button>
</form>

<script src="/js/edit.js"></script>
